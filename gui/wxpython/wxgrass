#!/bin/sh

if [ -z "$GISBASE" ] ; then
    echo "You must be in GRASS GIS to run this program." 1>&2
    exit 1
fi

#SYSTEM=`uname -s`

#if [ "$SYSTEM" = "Darwin" ] ; then
#	pythonw "$GISBASE/etc/wx/wxgui.py" -name wxgui_py
#else
if [ ! -z "$1" ] ; then
    # load workspace file
    python "$GISBASE/etc/wx/wxgui.py" "--workspace" "$1" &
else
    python "$GISBASE/etc/wx/wxgui.py" &
fi
#fi

exit 0
