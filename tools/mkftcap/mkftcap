#!/bin/sh

if  [ -z "$GISBASE" ]
then
	echo "You must be in GRASS GIS to run this program" >&2
	exit 1
fi

for dir in /usr/lib/X11/fonts /usr/share/X11/fonts /usr/share/fonts /Library/Fonts "$WINDIR/Fonts" ; do
    if [ -d "$dir" ] ; then
	find "$dir" -type f -iname '*.ttf' -printf '%f:%p:utf-8:\n' \
	| sed 's/.ttf:/:/'
    fi
done > "$GISBASE/etc/freetypecap"

