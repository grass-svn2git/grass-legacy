PACKAGE ="grassmods"
DEFS=-DPACKAGE=\"$(PACKAGE)\"
EXTRA_CFLAGS=$(GETHOSTNAME) $(ZLIBINCPATH) $(PICFLAGS) $(DEFS)

PGM=r.colors

LIST=main.o\
	eq.o\
	log.o\
	rules.o

COLRFILES = aspect bcyr byg byr elevation grey gyr rainbow ramp ryg slope srtm terrain wave

all:  $(BIN_CMD)/$(PGM) $(ETC)/colors

$(BIN_CMD)/$(PGM): $(LIST) $(DEPGISLIB)
	$(CC) $(LDFLAGS) -o $@ $(LIST) $(GISLIB) $(MATHLIB) $(XDRLIB)

$(ETC)/colors: $(COLRFILES)
	-mkdir -p $@
	cp -f $^ $@

$(DEPGISLIB): #
