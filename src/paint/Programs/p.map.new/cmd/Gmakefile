####################################################################


all: $(BIN_CMD)/$(PGM) \
     $(PAINT)/header \
     $(PAINT)/patterns.index

$(BIN_CMD)/$(PGM): $(LIST) $(INTERFACE) $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ $(LIST) $(INTERFACE) $(LIBES) $(MATHLIB) $(XDRLIB)

$(PAINT)/patterns.index: $(PAINT)/patterns $(PAINT)/patcc
	cd $(PAINT); ./patcc patterns

$(PAINT)/patcc: patcc.o
	$(CC) $(LDFLAGS) patcc.o -o $@

$(PAINT)/patterns: PATTERNS
	rm -f $@ ; cp $? $@; chmod +r $@

$(PAINT)/header: HEADER
	rm -f $@ ; cp $? $@; chmod +r $@

