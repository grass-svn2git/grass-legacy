if test "$GISBASE" = ""; then
 echo "You must be in GRASS GIS to run this program." >&2
 exit 1
fi   
     
eval `g.gisenv`
: ${GISBASE?} ${GISDBASE?} ${LOCATION_NAME?} ${MAPSET?}
LOCATION=$GISDBASE/$LOCATION_NAME/$MAPSET

program=`basename $0`

if [ $# -ne 0 -o "$1" = "-help" -o "$1" = "help" ]
then
	echo
	echo "Usage: $program"
	echo
	exit 1
fi

dsave=`d.save -o`
d.erase
eval "$dsave"

exit 0

