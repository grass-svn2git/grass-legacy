MYLIBDIR = $(SRC)/libes/dspf
DSPLIB	 = $(LIBDIR)/dspf/libdsp3.a
OGSF_DIR     = $(SRC)/libes/ogsf

EXTRA_CFLAGS = -I$(MYLIBDIR) -I$(OGSF_DIR) $(OPENGLINC) $(OPENGLwINC) $(XCFLAGS) $(XMINC)
SUNLDFLAGS   = $(XMLIBPATH) $(XLIBPATH) -L/lib
OGLLIB	     = $(OPENGLULIB) $(OPENGLLIB) $(LGLWM) $(XMLIB) -lX11 -lXt -lXext
LIBES        = $(DSPLIB) $(G3DLIB) $(DATETIMELIB) $(GISLIB)
DEPLIBS= $(DSPLIB) $(DEPG3DLIB) $(DEPDATETIMELIB) $(DEPGISLIB)

PGM = r3.showdspf

SOURCES	=	\
                new_init_graphics.c \
		cap_data.c \
		init_caps.c \
		do_color_ogl.c \
		get_color_ogl.c \
		draw_cap_ogl.c \
		draw_polys_ogl.c \
		draw_cappolys_ogl.c \
		thresh_array.c \
		make_header.c \
		r3_data.c \
		r3_find.c \
                togif.c \
                Ball.c \
                BallAux.c \
                BallMath.c \
                main_ogl.c

OBJ	=	\
                new_init_graphics.o \
		cap_data.o \
		init_caps.o \
		do_color_ogl.o \
		get_color_ogl.o \
		draw_cap_ogl.o \
		draw_polys_ogl.o \
		draw_cappolys_ogl.o \
		thresh_array.o \
		make_header.o \
		r3_data.o \
		r3_find.o \
                togif.o \
                Ball.o \
                BallAux.o \
                BallMath.o \
                main_ogl.o

$(BIN_CMD)/$(PGM): $(OBJ) $(DEPG3DLIB) $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ $(OBJ) $(EXTRA_CFLAGS) $(LIBES) $(OGLLIB) $(SUNLDFLAGS) $(MATHLIB) $(XDRLIB)


cap_data.o: $(MYLIBDIR)/viz.h
